// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  id         String   @id
  name       String
  email      String   @unique
  cpf        String   @unique
  created_at DateTime
  orders     Order[]  // Relationship with Order model

  @@map("clients")
}

model Order {
  id                  String    @id
  order_code          String
  client_id           String?
  status              String
  total               Float
  payment_status      String
  created_at          DateTime
  preparation_started DateTime?
  ready_at            DateTime?
  completed_at        DateTime?
  client              Client?   @relation(fields: [client_id], references: [id])
  items               OrderItem[]

  @@map("orders")
}

model Category {
  id          String    @id @unique
  name        String
  description String
  Product     Product[]

  @@map("categories")
}

model Product {
  id          String @id @unique
  name        String
  description String
  price       Float
  imageUrl    String @map("image_url")

  category   Category @relation(fields: [categoryId], references: [id])
  categoryId String

  @@map("products")
}
