generator client {
  provider = "prisma-client-js"
  // output   = ""
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  id            String   @id @unique
  creacreatedAt DateTime
  valueTotal    Float

  @@map("orders")
}

model Category {
  id          String    @id @unique
  name        String
  description String
  Product     Product[]

  @@map("categories")
}

model Product {
  id          String @id @unique
  name        String
  description String
  price       Float
  imageUrl    String @map("image_url")

  category   Category @relation(fields: [categoryId], references: [id])
  categoryId String

  @@map("products")
}
